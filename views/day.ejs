<%- include("header"); -%>

    <body>
        <div class="box" id="heading">
            <h1>
                <%= day %>
            </h1>
        </div>
        <div class="box">
            <% for (var i=0; i< listItems.length; i++){%>
                <%#iterate over the array%>
                    <div class="item">
                        <input type="checkbox">
                        <p>
                            <%=listItems[i]%>
                        </p>
                    </div>
                    <%}%>
                        <form action="/" method="post">
                            <input type="text" placeholder="New item" name="newItem" autocomplete="off">
                            <button type="submit">+</button>
                        </form>
        </div>
    </body>
    <%- include("footer"); -%>